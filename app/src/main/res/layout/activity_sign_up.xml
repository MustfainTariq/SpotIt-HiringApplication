<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF">.
    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/spot"></ImageView>

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:fontFamily="sans-serif-black"
        android:paddingLeft="20dp"
        android:text="Registration"
        android:textColor="#000000"
        android:textSize="24sp"></TextView>

    <TextView
        android:id="@+id/name"
        android:paddingTop="10dp"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_below="@id/login"
        android:fontFamily="sans-serif"
        android:paddingLeft="20dp"
        android:text="Name"
        android:textStyle="bold"
        android:textColor="#B5000000"
        android:textSize="18sp"></TextView>

    <EditText
        android:id="@+id/editTextTextName"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_below="@id/name"
        android:layout_centerInParent="true"
        android:alpha="0.5"
        android:background="@drawable/edittext"
        android:backgroundTint="#E3E3E3"
        android:paddingLeft="15dp"
        android:text="Enter name"></EditText>
    <TextView
        android:id="@+id/email"
        android:paddingTop="10dp"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_below="@id/editTextTextName"
        android:fontFamily="sans-serif"
        android:paddingLeft="20dp"
        android:text="Email"
        android:textStyle="bold"
        android:textColor="#B5000000"
        android:textSize="18sp"></TextView>

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_below="@id/email"
        android:layout_centerInParent="true"
        android:alpha="0.5"
        android:background="@drawable/edittext"
        android:backgroundTint="#E3E3E3"
        android:paddingLeft="15dp"
        android:text="Enter email"></EditText>

    <TextView
        android:id="@+id/contact"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/editTextTextEmailAddress"
        android:fontFamily="sans-serif"
        android:paddingLeft="20dp"
        android:text="Contact Number"
        android:textStyle="bold"
        android:textColor="#B5000000"
        android:textSize="18sp"></TextView>

    <EditText
        android:id="@+id/editTextTextContact"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_below="@id/contact"
        android:layout_centerInParent="true"
        android:alpha="0.5"
        android:background="@drawable/edittext"
        android:backgroundTint="#E3E3E3"
        android:paddingLeft="15dp"
        android:text="Enter contact number"></EditText>
    <TextView
        android:id="@+id/country"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/editTextTextContact"
        android:fontFamily="sans-serif"
        android:paddingLeft="20dp"
        android:text="Country"
        android:textStyle="bold"
        android:textColor="#B5000000"
        android:textSize="18sp"></TextView>


    <androidx.cardview.widget.CardView
        android:id="@+id/countryspinner"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_below="@id/country"
        android:layout_centerInParent="true"
        android:alpha="0.5"
        app:cardCornerRadius="10dp"
        android:paddingLeft="15dp">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:entries="@array/Country_Items">
        </Spinner>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/city"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/countryspinner"
        android:fontFamily="sans-serif"
        android:paddingLeft="20dp"
        android:text="City"
        android:textStyle="bold"
        android:textColor="#B5000000"
        android:textSize="18sp"></TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cityspinner"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_below="@id/city"
        android:layout_centerInParent="true"
        android:alpha="0.5"
        app:cardCornerRadius="10dp"
        android:paddingLeft="15dp">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:entries="@array/City_Items">
        </Spinner>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signupbtn"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_below="@id/cityspinner"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_button"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="@color/white"></androidx.appcompat.widget.AppCompatButton>

    <Button
        android:id="@+id/loginbtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/white"
        android:fontFamily="sans-serif-black"
        android:text="Login"
        android:textColor="#5E5D5B"
        android:textSize="20dp"></Button>
</RelativeLayout>