<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#D7D7D7"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif"
        android:text="00:58"
        android:textStyle="bold"
        android:textSize="25dp"
        ></TextView>

    <view class="androidx.recyclerview.widget.RecyclerView"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/edittext"
        android:layout_marginRight="20dp"
        >

    </view>

    <view class="android.widget.LinearLayout"
        android:id="@+id/whitearea"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_height="180dp">
    </view>

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="7dp"
        android:layout_alignTop="@+id/whitearea"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext"
        android:backgroundTint="#D0D0D0">

    </ImageButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/volbtn"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/whitearea"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/speaker">

    </androidx.appcompat.widget.AppCompatButton>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/micbtn"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/whitearea"
        android:layout_marginTop="8dp"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/volbtn"
        android:background="@drawable/micoff">

    </androidx.appcompat.widget.AppCompatButton>

    <ImageButton
        android:id="@+id/arrow"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:background="@drawable/redcancel"
        android:layout_alignTop="@+id/whitearea"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        >
    </ImageButton>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/pousebtn"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/whitearea"
        android:layout_toRightOf="@+id/volbtn"
        android:layout_marginTop="15dp"
        android:background="@drawable/pause">

    </androidx.appcompat.widget.AppCompatButton>


</RelativeLayout>