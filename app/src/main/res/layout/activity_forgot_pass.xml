<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">


    <TextView
        android:id="@+id/forgotpass"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="50dp"
        android:paddingLeft="20dp"
        android:text="Forgot your password?"
        android:textColor="#000000"
        android:textSize="24sp"></TextView>

    <TextView
        android:id="@+id/email"
        android:paddingTop="10dp"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_below="@id/forgotpass"
        android:fontFamily="sans-serif"
        android:paddingLeft="30dp"
        android:text="Email"
        android:textStyle="bold"
        android:textColor="#B5000000"
        android:textSize="18sp"></TextView>

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/email"
        android:layout_centerInParent="true"
        android:alpha="0.5"
        android:background="@drawable/edittext"
        android:backgroundTint="#E3E3E3"
        android:paddingLeft="20dp"
        android:text="Enter email"></EditText>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/resetbutton"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_below="@id/editTextTextEmailAddress"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_button"
        android:text="Reset Password"
        android:textAllCaps="false"
        android:textColor="@color/white"></androidx.appcompat.widget.AppCompatButton>

    <Button
        android:id="@+id/goback"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/white"
        android:fontFamily="sans-serif"
        android:text="Go back"
        android:textColor="#5E5D5B"
        android:textSize="20dp"
        android:textStyle="bold"></Button>
</RelativeLayout>