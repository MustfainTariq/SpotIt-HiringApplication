<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">
    <TextView
        android:id="@+id/findtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:text="Welcome!"
        android:textStyle="bold"
        android:textColor="#B5000000"
        android:textSize="24sp"></TextView>




    <View
        android:id="@+id/line"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EEEEEE"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_toLeftOf="@id/add_btn"
        android:layout_alignTop="@id/line"
        android:layout_marginRight="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/home_btn"
        >
    </androidx.appcompat.widget.AppCompatImageButton>

    <ImageButton
        android:id="@+id/search_icon"
        android:layout_width="65dp"
        android:layout_height="68dp"
        android:layout_alignTop="@id/line"
        android:layout_marginTop="28dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/add_btn"
        android:background="@drawable/search_btn"></ImageButton>

    <ImageButton
        android:id="@+id/add_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/line"
        android:background="@drawable/add_btn"
        >

    </ImageButton>


    <ImageButton
        android:id="@+id/chat_icon"
        android:layout_width="65dp"
        android:layout_height="68dp"
        android:layout_alignTop="@id/line"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/add_btn"
        android:background="@drawable/chat_btn"></ImageButton>

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="68dp"
        android:layout_alignTop="@id/line"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="80dp"
        android:layout_toRightOf="@id/add_btn"
        android:background="@drawable/profile_btn">
    </ImageButton>

</RelativeLayout>